Algoritmo sin_titulo
	Definir cant_dias Como Entero
	
	Leer cant_dias
	
	Escribir "si la cantidad de días es:" cant_dias
	
	Definir hora, min, seg Como Real
	
	hora= cant_dias*24
	
	Escribir "equivale a: " hora "horas."
	
	min= cant_dias*1440
	
	Escribir "equivale a:" min "minutos"
	
	seg= cant_dias*86400
	
	Escribir "equivale a:" seg "segundos"
	
	
	
FinAlgoritmo
